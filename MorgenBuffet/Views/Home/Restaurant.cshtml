@model MorgenBuffet.DTO.OrderDTO
@{
    ViewData["Title"] = "Restaurant";
}
<h1>Reception</h1>
<p class="align-content-center"> Check customers in!</p>
<form asp-action="Update" method="put">
    <div class="form-group">
        <label asp-for="RoomNumber" for="RoomNumber">Room number:</label>
        <input type="number" name="RoomNumber" class="form-control" id="roomNr" />
        <div />

        <div class="form-group"></div>
        <label asp-for="Adults" for="orderDTO.Adults"> Number of Adults:</label>
        <input asp-for="Adults" class="form-control" />
    </div>

    <div class="form-check group">
        <label asp-for="Kids">Number of Children:</label>
        <input asp-for="Kids" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit">Check In for breakfast!</button>
    </div>
</form>