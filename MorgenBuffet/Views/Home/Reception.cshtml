@model MorgenBuffet.DTO.OrderDTO
@{
    ViewData["Title"] = "Reception";
}
<h1>Reception</h1>
<form asp-action="PostAddOrder" method="post">
    <div class="form-group">
        <label asp-for="RoomNumber">Room number:</label>
        <input asp-for="RoomNumber" class="form-control" id="roomNr" />
        <div />

        <div class="form-group"></div>
        <label asp-for="Adults"> Number of Adults:</label>
        <input asp-for="Adults" class="form-control" />
    </div>

    <div class="form-check group">
        <label asp-for="Kids">Number of Children:</label>
        <input asp-for="Kids" class="form-control" />
    </div>

    <div class="form-group">
        <button type="submit">Check In!</button>
    </div>

</form>